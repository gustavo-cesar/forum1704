package forum2;

public class Smartphone {
	
	private String nomeSmartphone;
	private String marca;
	private boolean preco;
	
	public Smartphone() {}
	
	

	public Smartphone(String nomeSmartphone, String marca, boolean preco) {
		this.nomeSmartphone = nomeSmartphone;
		this.marca = marca;
		this.preco = preco;
	}



	public String getNomeSmartphone() {
		return nomeSmartphone;
	}

	public void setNomeSmartphone(String nomeSmartphone) {
		this.nomeSmartphone = nomeSmartphone;
	}

	public String getMarca() {
		return marca;
	}

	public void setMarca(String marca) {
		this.marca = marca;
	}

	public boolean isPreco() {
		return preco;
	}

	public void setPreco(boolean preco) {
		this.preco = preco;
	}
}
